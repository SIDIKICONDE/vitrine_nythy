{
  "name": "vitrine-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:production": "NODE_ENV=production next build",
    "build:firebase": "BUILD_TARGET=firebase next build",
    "start": "next start",
    "start:production": "NODE_ENV=production next start -p 3000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "check": "npm run lint && npm run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prebuild": "npm run check",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:all": "rm -rf .next out node_modules/.cache node_modules package-lock.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:firebase": "npx ts-node scripts/test-firebase-connection.ts",
    "test:security": "npx ts-node scripts/test-security.ts",
    "test:security:v2": "npx ts-node scripts/test-security-v2.ts",
    "simulate:attacks": "npx ts-node scripts/simulate-attacks.ts",
    "deploy:firebase": "npm run build:firebase && firebase deploy --only hosting",
    "deploy:functions": "cd firebase && firebase deploy --only functions",
    "deploy:firestore": "cd firebase && firebase deploy --only firestore:rules,firestore:indexes",
    "deploy:all": "npm run build:firebase && cd firebase && firebase deploy",
    "verify:production": "npm run check && npm run test && npm run test:security"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@upstash/ratelimit": "^2.0.3",
    "@upstash/redis": "^1.34.3",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.0",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.6.0",
    "geoip-lite": "^1.4.10",
    "jsdom": "^27.2.0",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "next-auth": "^5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "qrcode.react": "^4.2.0",
    "react": "19.2.0",
    "react-datepicker": "^8.8.0",
    "react-dom": "19.2.0",
    "speakeasy": "^2.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/geoip-lite": "^1.4.4",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20",
    "@types/qrcode.react": "^1.0.5",
    "@types/react": "^19",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^19",
    "@types/speakeasy": "^2.0.10",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "jest": "^30.2.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
